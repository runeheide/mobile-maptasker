    //Allows for ? location stuff
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    //Allows for fine location sensors (GPS)    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application       
        android:icon="@drawable/ilocator"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".LaunchActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        <activity
            android:name=".StartScreenActivity"
            android:label="@string/app_name">
            </activity>
        <activity
            android:name=".SignupActivity"
            android:label="@string/signup">
            </activity>
        <activity 
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            </activity>
        <activity 
            android:name=".DashboardActivity"
            android:label="@string/dashboard" >
            </activity>
        <activity 
            android:name=".ObjectsListActivity"
            android:label="@string/objects" >
            </activity>
        <activity 
            android:name=".MapsActivity"
            android:label="@string/maps" >
            </activity>
        <activity 
            android:name=".GPSViewActivity"
            android:label="@string/gpsview" >
            </activity>
        <activity 
            android:name=".ManagementActivity"
            android:label="@string/management" >
            </activity>
        <activity
            android:name=".ARViewActivity"
            android:label="@string/arview" >
            </activity>
        <activity
            android:name=".ARApplicationActivity"
            android:label="@string/arview"
            android:screenOrientation="landscape" >
            </activity>
        <activity 
            android:name=".HeatmapViewActivity"
            android:label="@string/heatmapview" >
            </activity>
    	<activity 
            android:name=".AddObjectActivity"
            android:label="@string/addobject" 
            android:screenOrientation="portrait">
            </activity>
        <activity 
            android:name=".EditObjectActivity"
            android:label="@string/editobject" >
            </activity>
        <activity 
            android:name=".AddPhotoActivity"
            android:label="@string/addphoto" >
            </activity>   
        <activity 
            android:name=".LocationActivity"
            android:label="@string/location" >
            </activity>
        <activity 
            android:name=".CategoriesActivity"
            android:label="@string/categories" >
