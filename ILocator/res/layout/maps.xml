<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bckgrnd"
    android:paddingTop="40dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageButton 
        android:id="@+id/gpsButton"
        android:background="@drawable/mapviewselector"
    	android:layout_width="262dp"
    	android:layout_height="76dp"
    	android:layout_gravity="center_horizontal"
    	android:layout_marginTop="30dp" 
    	android:layout_marginBottom="20dp"  
    	android:text="@string/mapview" />
    <ImageButton
        android:textColorHighlight="#333333"
        android:id="@+id/arButton"
        android:background="@drawable/arviewselector"
        android:layout_width="262dp"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"  
        android:text="@string/arview" />
    <ImageButton
        android:id="@+id/heatmapButton"
        android:background="@drawable/heatmapselector"
        android:layout_width="262dp"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"  
        android:text="@string/heatmapview" />
    <ImageButton 
        android:id="@+id/backButton"
        android:background="@drawable/backselector"
        android:layout_width="262dp"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/back"/>
  
</LinearLayout>